                        id: pictures_path
                        pos_hint: {"center_x": 0.5, 'center_y': .5}
                        on_release: app.open_file_manager("ﺍﺪﺒﻣ ﯼﺎﻫ ﺲﮑﻋ ﯼﺭﻮﺘﮐﺮﯾﺍﺩ", "folder", "pictures_path", "[None]")
                MDLabel:
                    text: 'ﺍﺪﺒﻣ ﯼﺎﻫ ﺲﮑﻋ ﯼﺭﻮﺘﮐﺮﯾﺍﺩ ﺏﺎﺨﺘﻧﺍ'
