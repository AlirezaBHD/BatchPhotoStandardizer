MDBoxLayout:
    orientation: "vertical"

    MDTopAppBar:
        MDBoxLayout:
            spacing: dp(20)
            orientation: "horizontal"

            MDFloatingActionButton:
                icon: "theme-light-dark"
                pos_hint: {'center_y': 0}
                on_release: app.toggle_theme()
                md_bg_color: 1,1,1,1
                icon_color: 1,0,0,1

            MDLabel:
                bold: True
                text: 'ﺭﻮﺸﮐ ﯽﺘﺴﯾﺰﻬﺑ ﻥﺎﻣﺯﺎﺳ'
                halign: 'right'
                size_hint_x: 1
                pos_hint: {'center_y': 1}

    MDFloatingActionButtonSpeedDial:
        label_text_color: "red"
        type: "large"
        icon_size: dp(56)
        id: speed_dial
        data: app.speed_dial_data
        root_button_anim: True
        icon: app.icon_path
        bg_color_root_button: 1,1,1,1

    MDBoxLayout:
        orientation: "vertical"
        padding: dp(20)
        spacing: dp(20)

        MDCard:
            orientation: "vertical"
            size_hint: None, None
            size: "500dp", "550dp"
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            elevation: 5
            padding: dp(20)
            spacing: dp(20)

            MDBoxLayout:
                orientation: "horizontal"
                spacing: dp(10)
                MDBoxLayout:
                    MDRaisedButton:
